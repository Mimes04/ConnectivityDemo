<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConnectivityDemo.MainPage">

    <StackLayout BackgroundColor="FloralWhite"
                 >
        <Label Text="Disconnected!"
               TextColor="Red"
               x:Name="connectMsg"
               Opacity="0"
               HorizontalOptions="Center"
               Margin="0, 25, 0, 0"/>
        <StackLayout BackgroundColor="DimGray"
                     HorizontalOptions="Center"
                     Margin="0, 220, 0, 0"
                     Padding="50"
                     >
            <Label Text="Check for Connectivity!"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontSize="Large"/>
            <Button BackgroundColor="OrangeRed"
                    TextColor="PapayaWhip"
                    Text="Check Connection"
                    FontSize="Medium"
                    Margin="0, 40, 0, 0"
                    CornerRadius="60"
                    WidthRequest="70"
                    HeightRequest="70"
                    Clicked="Status_Clicked"
                    />
        </StackLayout>
    </StackLayout>
</ContentPage>
