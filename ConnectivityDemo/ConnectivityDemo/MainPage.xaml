<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConnectivityDemo.MainPage">

    <StackLayout BackgroundColor="FloralWhite">
        <StackLayout BackgroundColor="DimGray"
                     HorizontalOptions="Center"
                     Margin="0, 220, 0, 0"
                     Padding="50"
                     >
            <Label Text="Check for Connectivity!"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontSize="Large"/>
            <Button BackgroundColor="OrangeRed"
                    TextColor="PapayaWhip"
                    Text="Click Me!"
                    FontSize="Medium"
                    Margin="0, 40, 0, 0"
                    CornerRadius="60"
                    WidthRequest="70"
                    HeightRequest="70"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
